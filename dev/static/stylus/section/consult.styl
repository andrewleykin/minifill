.consult
	padding 230px 0
	background url("../img/general/consult-bg.jpg") center center no-repeat
	background-size cover
	@media (max-width:960px)
		padding 170px 0
	@media (max-width:700px)
		padding 140px 0

.consult__block
	width 100%
	max-width 460px
	margin-left auto
	text-align center
	border-radius 5px
	box-shadow 0px 0px 20px -2px rgba(#000, .7)
	padding 55px 65px 15px 55px
	margin-right 70px
	background #FFF
	@media (max-width:960px)
		padding 30px 40px 10px
	@media (max-width:700px)
		padding 20px 10px 10px