.advantage
	padding 110px 0 70px 100px
	background url(../img/general/advantage-bg.jpg) center center no-repeat
	background-size cover
	color white
	@media (max-width:960px)
		padding 90px 0 50px 80px
	@media (max-width:700px)
		padding 60px 0 30px 20px

.advantage__title
	@extend .title
	text-align left
	margin-bottom 50px
	@media (max-width:960px)
		margin-bottom 40px
	@media (max-width:700px)
		margin-bottom 25px

.advantage__list
	display flex
	justify-content space-between
	flex-wrap wrap
	margin-bottom 60px
	@media (max-width:960px)
		margin-bottom 40px
	@media (max-width:700px)
		margin-bottom 0

.advantage__item
	width 100%
	max-width 500px
	&:last-child
		max-width 100%
		margin-top 40px
		.advantage__text
			margin-bottom 40px
	&:before
		content ""
		display block
		background url("../img/general/check.png") center center no-repeat
		background-size cover
		size(35px)
		margin-bottom 20px
	@media (max-width:1200px)
		margin-bottom 20px
		&:last-child
			margin-bottom 0
			margin-top 0

.advantage__subtitle
	display block
	font-family antipastoExtra
	font-size 33px
	margin-bottom 35px
	@media (max-width:960px)
		font-size 28px
		margin-bottom 30px
	@media (max-width:700px)
		font-size 24px
		flex-direction column

.advantage__text
	font-size 25px
	@media (max-width:960px)
		font-size 20px
	@media (max-width:700px)
		font-size 18px


.advantage__order
	display flex
	justify-content space-between
	@media (max-width:700px)
		flex-direction column

.advantage__price
	font-size 47px
	font-family aristaFat
	.icon
		fill white
		size(30px,40px)
	@media (max-width:960px)
		font-size 40px
		.icon
			size(20px,30px)
	@media (max-width:700px)
		font-size 32px
		margin-bottom 20px

.advantage__price--small
	font-size 45px
	font-family boldFont
	@media (max-width:960px)
		font-size 38px
	@media (max-width:700px)
		font-size 24px

.advantage__btn
	margin-right 30px
	@media (max-width:700px)
		margin-right 0