.problem
	padding 130px 0
	background url("../img/general/problem-bg.jpg") center center no-repeat
	background-size cover
	@media (max-width:960px)
		padding 110px 0
	@media (max-width:700px)
		padding 70px 0

.problem__title
	@extend .title
	color white
	margin-bottom 80px
	@media (max-width:960px)
		margin-bottom 60px
	@media (max-width:700px)
		margin-bottom 40px

.problem__block
	background accentColor
	border-radius 10px
	color white
	padding 90px 30px 20px 50px
	display flex
	justify-content space-between
	flex-wrap: wrap
	@media (max-width:960px)
		padding 70px 20px 10px 40px
	@media (max-width:700px)
		padding 50px 20px 10px 20px

.problem__item
	width 100%
	max-width 500px
	margin-bottom 80px
	padding-left 50px
	position relative
	&:before
		content ""
		display block
		position(absolute, $top:0,$left:0)
		background url("../img/general/check.png") center center no-repeat
		background-size cover
		size(35px)
	@media (max-width:960px)
		margin-bottom 30px
		padding-left 40px
		&:before
			left -5px

.problem__subtitle
	display block
	font-family antipastoExtra
	font-size 30px
	text-transform uppercase
	margin-bottom 35px
	@media (max-width:960px)
		margin-bottom 20px
		font-size 24px
	@media (max-width:700px)
		font-size 20px

.problem__text
	font-size 25px
	@media (max-width:960px)
		font-size 20px
	@media (max-width:700px)
		font-size 16px