.partners
	padding 80px 0
	@media (max-width:960px)
		padding 60px 0

.partners__title
	@extend .title
	margin-bottom 80px

.partners__list
	display flex
	justify-content center
	@media (max-width:960px)
		flex-wrap wrap
	@media (max-width:480px)
		flex-direction column
		align-items center

.partners__item
	margin-right 50px
	&:last-child
		margin-right 0
	@media (max-width:960px)
		margin-right 20px
	@media (max-width:480px)
		margin 0
		margin-bottom 20px

.partners__img
	@extend .trs
	min-width 40px
	&:hover
		transform: scale(1.1)