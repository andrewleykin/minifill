.about
	padding-top 150px
	background url(../img/general/about-bg.jpg) center center no-repeat
	background-size cover

.about__wrap
	text-align center

.about__title
	font-family antipastoExtra
	font-size 60px 
	text-transform uppercase
	color white
	margin-bottom 40px

.about__descr
	font-family antipastoMedium
	font-size 38px
	color white
	margin-bottom 50px
	padding 0 200px

.about__btn
	margin-bottom 90px

.about__video
	width 90%
	margin 0 auto 100px
	position relative
	padding-bottom 43.25%
	height 0
	overflow hidden
	border-radius 10px
	iframe
		position absolute
		top 0
		left 0
		width 100%
		height 100%

.about__info
	display flex
	justify-content space-between
	padding-left 30px

.about__block
	text-align left
	&:last-child
		margin-left 40px
		width 44%

.about__subtitle
	display block
	font-family antipastoBold
	font-size 33px
	margin-bottom 35px
	padding-left 40px

.about__list
	margin-bottom 30px

.about__item
	margin-bottom 30px
	padding 0 40px
	position relative
	&:last-child
		margin-bottom 0
	&:before
		content ""
		display block
		size(11px)
		border-radius 50%
		background accentColor 
		position absolute
		top 8px
		left 12px

.about__btn--order
	margin-left 40px