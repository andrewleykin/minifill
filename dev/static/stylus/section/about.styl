.about
	padding-top 150px
	background url(../img/general/about-bg.jpg) center center no-repeat
	background-size cover
	@media (max-width:960px)
		padding-top 100px
	@media (max-width:700px)
		padding-top 70px

.about__wrap
	text-align center

.about__title
	font-family antipastoExtra
	font-size 60px 
	text-transform uppercase
	color white
	margin-bottom 40px
	@media (max-width:960px)
		margin-bottom 30px
		font-size 40px
	@media (max-width:480px)
		font-size 34px

.about__descr
	font-family antipastoMedium
	font-size 38px
	color white
	margin-bottom 50px
	padding 0 200px
	@media (max-width:960px)
		margin-bottom 30px
		padding 0 130px
		font-size 34px
	@media (max-width:700px)
		padding 0 30px
	@media (max-width:480px)
		padding 0
		font-size 28px

.about__btn
	margin-bottom 90px
	@media (max-width:960px)
		margin-bottom 50px

.about__video
	width 90%
	margin 0 auto 70px
	position relative
	padding-bottom 43.25%
	height 0
	overflow hidden
	border-radius 10px
	iframe
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	@media (max-width:960px)
		margin-bottom 50px
	@media (max-width:700px)
		margin-bottom 10px
	@media (max-width:480px)
		padding-bottom 50%
		width 100%

.about__info
	display flex
	justify-content space-between
	padding-left 30px
	padding-top 30px
	@media (max-width:960px)
		padding-left 0
	@media (max-width:700px)
		padding-top 20px
		flex-direction column

.about__block
	text-align left
	&:last-child
		margin-left 40px
		width 44%
	@media (max-width:960px)
		&:last-child
			margin-left 20px
			min-width 50%
	@media (max-width:700px)
		&:last-child
			margin 30px 0 0 0
			width 100%

.about__subtitle
	display block
	font-family antipastoBold
	font-size 33px
	margin-bottom 35px
	padding-left 40px
	@media (max-width:960px)
		margin-bottom 20px

.about__list
	margin-bottom 30px
	@media (max-width:960px)
		margin-bottom 20px

.about__item
	margin-bottom 30px
	padding 0 40px
	position relative
	&:last-child
		margin-bottom 0
	&:before
		content ""
		display block
		size(11px)
		border-radius 50%
		background accentColor 
		position absolute
		top 8px
		left 12px
	@media (max-width:960px)
		font-size 16px

.about__btn--order
	margin-left 40px
	@media (max-width:700px)
		display block
		margin 0 auto