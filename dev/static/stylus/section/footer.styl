.footer
	display flex
	@media (max-width:960px)
		flex-direction column

.footer__left
	width 50%
	@media (max-width:960px)
		width 100%
		height 500px
		order 1

.footer__right
	width 50%
	padding 65px 30px 15px 100px
	@media (max-width:1200px)
		padding 45px 20px 15px 40px
	@media (max-width:960px)
		width 100%
		padding 40px 30px

.footer__title
	@extend .title
	font-size 48px
	color blackColor
	text-align left
	margin-bottom 55px
	@media (max-width:1200px)
		margin-bottom 35px
	@media (max-width:480px)
		margin-bottom 20px

.footer__contacts
	font-size 18px
	margin-bottom 50px
	.icon
		size(34px)
		display inline-block
		margin-right 15px
	@media (max-width:1200px)
		margin-bottom 30px
	@media (max-width:480px)
		font-size 16px
		margin-bottom 20px
		.icon
			size(28px)
			margin-right 10px

.footer__place
	display flex
	margin-bottom 40px
	@media (max-width:480px)
		margin-bottom 20px

.footer__text
	display block

.footer__phone
	margin-bottom 35px
	@media (max-width:480px)
		margin-bottom 20px

.footer__phone,.footer__mail
	a
		@extend .trs
		&:hover
			color accentColor

.footer__social
	display flex
	align-items flex-end
	margin-bottom 50px
	a
		margin-right 30px
		&:last-child
			margin-right 0
			.icon
				size(45px,55px)
		&:hover
			.icon
				fill accentColor
		.icon
			size(40px)
			@extend .trs
	@media (max-width:1200px)
		margin-bottom 30px
	@media (max-width:480px)
		a
			.icon
				size(30px)
			&:last-child
				margin-right 0
				.icon
					size(35px,45px)

.footer__subtitle
	font-size 20px
	font-family boldFont
	margin-bottom 40px
	text-transform uppercase
	@media (max-width:1200px)
		margin-bottom 30px


// footer-form

.footer-form__input
	background inputbg
	padding 15px 30px
	width 100%
	margin-bottom 15px
	border-radius 5px
	text-transform uppercase
	font-family mainFont
	border 1px solid transparent
	+placeholder()
		color accentColor
		text-transform uppercase
		font-size 14px
	&:focus
		border 1px solid blackColor

.footer-form__row
	display flex
	.footer-form__input:first-child
		margin-right 30px
	@media (max-width:480px)
		flex-direction column

.footer-form__textarea
	@extend .footer-form__input
	margin-bottom 30px
	height 130px


.footer-form__submit
	margin-left auto
	display block
	margin-bottom 35px


.footer-form__checkbox-block
	width 50%
	@media (max-width:1200px)
		width 100%