section.about
	.container
		.about__wrap
			h2.about__title= content.about.title
			h4.about__descr= content.about.descr
			button.g-btn.about__btn(data-remodal-target="order")= content.about.btn
			.about__video
				iframe(src='https://www.youtube.com/embed/cIyVNoY3_L4?showinfo=0', frameborder='0', allowfullscreen='')
			.about__info.menu__section(data-article="about")
				.about__block
					img.about__img(src="app/img/general/minifill.jpg" alt="Фото доазатора Минифилл")
				.about__block
					span.about__subtitle= content.about.subtitle
					ul.about__list
						each object in content.content
							li.about__item= object["text"]
					button.g-btn.g-btn--order.about__btn--order(data-remodal-target="order")= content.about.btnOrder